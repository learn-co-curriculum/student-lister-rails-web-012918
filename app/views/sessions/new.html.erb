<h1>Login</h1>

<% if flash[:message] %>
  <p><%=flash[:message]%></p>
<% end %>

<%= form_tag '/login', {class: 'ui form'}  do %>

  <div class="field">
    <label for="username">Username</label>
    <%= text_field_tag :username %>
  </div>

  <%= submit_tag 'Login', {class: 'ui huge yellow button'} %>
<% end %>
